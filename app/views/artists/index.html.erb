<h1>Artists</h1>

<ul> 
    <% @artists.each do |artist| %>
        <li> <%= link_to artist.name, artist %>: <%= pluralize(artist.song_count, "song") %> </li>
        <ul>
            <% artist.songs.each do |s| %>
                <li> <%= link_to s.title, song_path(s) %> </li>
            <% end %>
        </ul>
    <% end %> 
</ul>